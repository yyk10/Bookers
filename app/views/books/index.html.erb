<html>
<h1>Books</h1>

<% if flash[:notice] %>
 <div class="alert alert-success" role="alert">
 <p class="notice text-center" style="color:green;"><%= flash[:notice] %></p></div>
<% end %>

<div style="margin-left:50px;margin-top:5px;"> 
<table border="3" width="55%">
 <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <td colspan="3"></td>
   </tr>
 </thead>

 <tbody>
 <% @books.each do |book| %>
    <tr>
     <td><%= book.title %> </td>
     <td><%= book.body %></td>
     <td width=50><%= link_to "Show", book_path(book) %></td>
     <td width=40><%= link_to "Edit", edit_book_path(book) %></td>
     <td width=40><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
   </tr>
   <% end %>
 </tbody>
</table>
</div>

<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> error occurred
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<div><%= f.submit 'Create Book' %></div>

<% end %>

</html>
